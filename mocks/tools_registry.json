{
  "tools": [
    {
      "name": "duckdb_sql",
      "description": "Execute read-only SQL with DuckDB on provided parquet paths.",
      "input_schema": {
        "type": "object",
        "properties": { "sql": { "type": "string" } },
        "required": ["sql"]
      },
      "safety": { "allow": ["SELECT", "WITH"], "deny": ["INSERT", "UPDATE", "DELETE", "CREATE", "DROP", "ALTER"] }
    },
    {
      "name": "fetch_schema",
      "description": "Return dataset schema snapshot.",
      "input_schema": { "type": "object", "properties": {"resource": {"type": "string"}}, "required": ["resource"] }
    }
  ]
}